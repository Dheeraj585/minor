<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/appbg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your road trip details"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"

        android:layout_centerHorizontal="true"/>

    <!-- Distance -->
    <TextView
        android:textColor="#ffffff"

        android:id="@+id/distanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="16sp"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp"/>

    <EditText
        android:textColor="#ffffff"

        android:id="@+id/distanceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_below="@id/distanceLabel"
        android:layout_marginTop="8dp"/>

    <!-- Carbon Footprint -->
    <TextView
        android:textColor="#ffffff"

        android:id="@+id/carbonFootprintLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbon Footprint"
        android:textSize="16sp"
        android:layout_below="@id/distanceEditText"
        android:layout_marginTop="16dp"/>

    <EditText
        android:textColor="#ffffff"

        android:id="@+id/carbonFootprintEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_below="@id/carbonFootprintLabel"
        android:layout_marginTop="8dp"/>

    <!-- Emission Rate -->
    <TextView
        android:textColor="#ffffff"

        android:id="@+id/emissionRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emission Rate"
        android:textSize="16sp"
        android:layout_below="@id/carbonFootprintEditText"
        android:layout_marginTop="16dp"/>

    <EditText
        android:textColor="#ffffff"

        android:id="@+id/emissionRateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_below="@id/emissionRateLabel"
        android:layout_marginTop="8dp"/>

    <!-- Offset Information -->
    <TextView
        android:textColor="#ffffff"

        android:id="@+id/offsetInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The above emission rate will be added to your dashboard."
        android:textSize="14sp"
        android:layout_below="@id/emissionRateEditText"
        android:layout_marginTop="16dp"/>

    <!-- Offset Button -->
    <Button
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:id="@+id/offsetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offset Now"
        android:onClick="to_bar"
        android:layout_below="@id/offsetInfoTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>