<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <!-- Image Button at the Top Left -->
    <ImageButton
        android:id="@+id/imageButtonTopLeft"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Text: Carbon Produced in this Travel -->


    <TextView
        android:id="@+id/textCarbonProduced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Carbon Produced in this Travel"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonTopLeft" />

    <!-- Text View alongside Carbon Produced in this Travel -->
    <TextView
        android:id="@+id/valueCarbonProduced"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="100 kg"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCarbonProduced" />

    <!-- Text: Your Total Carbon Production Till Today -->
    <TextView
        android:id="@+id/textTotalCarbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Total Carbon Production Till Today"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueCarbonProduced" />

    <!-- Text View alongside Your Total Carbon Production Till Today -->
    <TextView
        android:id="@+id/valueTotalCarbon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1000 kg"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTotalCarbon" />

    <!-- Text: Total Trees You Can Plant -->
    <TextView
        android:id="@+id/textTotalTrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total Trees You Can Plant"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueTotalCarbon" />

    <!-- Text View alongside Total Trees You Can Plant -->
    <TextView
        android:id="@+id/valueTotalTrees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTotalTrees" />

    <!-- Button: Plant Trees -->
    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:text="Plant Trees"
        android:onClick="planted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueTotalTrees" />

</androidx.constraintlayout.widget.ConstraintLayout>
